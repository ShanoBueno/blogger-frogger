<section>
  <h2>Create New Blog</h2>

  <form class="new-blog-form">
    <div>
      <label for="blog-title">Title</label>
      <input type="text" id="blog-title" name="blog-title" />
    </div>
    <div>
      <label for="movie">Movie</label>
      <input type="text" id="movie" name="movie" />
    </div>
    <div>
      <label for="text">Body</label>
      <input type="text" id="text" name="text"/>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>
{{#if blogs.length}}
<section>
  <h2>Your Blogs</h2>
  <ol>
    {{#each blogs as |blog|}}
    <li>
      {{> blog-info blog}}
      <a href="/dashboard/edit/{{blog.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-blog.js"></script>